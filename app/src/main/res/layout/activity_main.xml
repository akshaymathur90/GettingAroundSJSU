<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main" >

    <ImageView
        android:id="@+id/campusmap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/campusmap"
        android:layout_alignParentBottom="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/king"
            android:layout_width="50dp"
            android:layout_height="75dp"

            android:src="@drawable/transparent"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="166dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/yoshihiro"
            android:layout_width="40dp"
            android:layout_height="50dp"

            android:src="@drawable/transparent"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/bbc"
            android:layout_alignLeft="@+id/king"
            android:layout_alignStart="@+id/king" />

        <ImageView
            android:id="@+id/engr"
            android:layout_width="60dp"
            android:layout_height="85dp"

            android:src="@drawable/transparent"
            android:layout_alignTop="@+id/king"
            android:layout_toLeftOf="@+id/bbc"
            android:layout_toStartOf="@+id/bbc"
            android:layout_marginRight="56dp"
            android:layout_marginEnd="56dp" />

        <ImageView
            android:id="@+id/studentunion"
            android:layout_width="50dp"
            android:layout_height="40dp"

            android:src="@drawable/transparent"
            android:layout_below="@+id/engr"
            android:layout_alignLeft="@+id/engr"
            android:layout_alignStart="@+id/engr"
            android:layout_marginTop="14dp" />

        <ImageView
            android:id="@+id/bbc"
            android:layout_width="50dp"
            android:layout_height="40dp"

            android:src="@drawable/transparent"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_below="@+id/studentunion"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp" />

        <ImageView
            android:id="@+id/southparking"
            android:layout_width="70dp"
            android:layout_height="60dp"

            android:src="@drawable/transparent"
            android:layout_marginBottom="48dp"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/studentunion"
            android:layout_toStartOf="@+id/studentunion" />

    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/location"
        android:id="@+id/btn_getlocation"
        />
</FrameLayout>